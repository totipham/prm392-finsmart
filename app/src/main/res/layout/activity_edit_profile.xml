<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditProfileActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:text="Edit Information"
        android:textColor="#111827"
        android:textColorHint="#111827"
        android:textFontWeight="600"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_name_editin4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/custome_input_authen"
        android:drawableStart="@drawable/custome_user_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="FULL NAME"
        android:textColor="#CBCBCB"
        app:layout_constraintStart_toStartOf="@+id/edt_email_editin4"
        app:layout_constraintTop_toBottomOf="@+id/imv_image" />

    <EditText
        android:id="@+id/edt_email_editin4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/custome_input_authen"
        android:defaultFocusHighlightEnabled="true"
        android:drawableStart="@drawable/custome_email_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="#CBCBCB"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/btn_saveeditin4"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_editin4"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_saveeditin4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custome_button_authen"
        android:text="SAVE CHANGES"
        android:textColor="#0D0D0D"
        android:textColorHint="#0D0D0D"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_editin4" />

    <ImageView
        android:id="@+id/imv_image"
        android:layout_width="166dp"
        android:layout_height="157dp"
        android:layout_marginTop="52dp"
        android:onClick="onImageViewClick"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@drawable/custome_user_icon"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>