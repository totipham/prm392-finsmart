<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditProfileActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="41dp"
        android:text="Edit Information"
        android:textColor="#111827"
        android:textColorHint="#111827"
        android:textFontWeight="600"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_name_editin4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/custome_input_authen"
        android:drawableStart="@drawable/custome_user_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="FULL NAME"
        android:textColor="#CBCBCB"
        app:layout_constraintStart_toStartOf="@+id/edt_email_editin4"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/edt_email_editin4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custome_input_authen"
        android:drawableStart="@drawable/custome_email_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="EMAIL"
        android:textColor="#CBCBCB"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/edt_password_editin4"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_editin4" />

    <EditText
        android:id="@+id/edt_password_editin4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custome_input_authen"
        android:drawableStart="@drawable/custome_lock_icon"
        android:drawableEnd="@drawable/custome_eye_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Password"
        android:textColor="#CBCBCB"
        app:layout_constraintStart_toStartOf="@+id/btn_saveeditin4"
        app:layout_constraintTop_toBottomOf="@+id/edt_email_editin4" />

    <Button
        android:id="@+id/btn_saveeditin4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custome_button_authen"
        android:text="SAVE CHANGES"
        android:textColor="#0D0D0D"
        android:textColorHint="#0D0D0D"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_password_editin4" />
</androidx.constraintlayout.widget.ConstraintLayout>