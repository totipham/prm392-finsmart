<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ResetPasswordActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Reset Password"
        android:textColor="#111827"
        android:textColorHint="#111827"
        android:textFontWeight="600"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Reset And Confirm Password"
        android:textColor="#CBCBCB"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/edt_newpass"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edt_newpass"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/custome_input_authen"
        android:drawableStart="@drawable/custome_lock_icon"
        android:drawableEnd="@drawable/custome_eye_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Password"
        android:textColor="#CBCBCB"
        app:layout_constraintStart_toStartOf="@+id/edt_renewpass"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/edt_renewpass"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custome_input_authen"
        android:drawableStart="@drawable/custome_lock_icon"
        android:drawableEnd="@drawable/custome_eye_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Password"
        android:textColor="#CBCBCB"
        app:layout_constraintStart_toStartOf="@+id/btn_reset"
        app:layout_constraintTop_toBottomOf="@+id/edt_newpass" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/custome_button_authen"
        android:text="RESET"
        android:textColor="#0D0D0D"
        android:textColorHint="#0D0D0D"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_renewpass" />
</androidx.constraintlayout.widget.ConstraintLayout>